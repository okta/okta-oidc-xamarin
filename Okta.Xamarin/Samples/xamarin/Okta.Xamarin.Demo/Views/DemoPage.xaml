<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Okta.Xamarin.Demo.Views.DemoPage">
    <ScrollView>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Demo" FontSize="Title" />
            <BoxView HeightRequest="1" Color="#000000" />
            <Button Margin="0,10,0,0"
                    Text="Introspect Demo >>"
                    Command="{Binding GoToIntrospectPageCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" 
            />
            <Button Margin="0,0,0,0"
                    Text="Renew Demo >>"
                    Command="{Binding GoToRenewPageCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" 
            />
            <Button Margin="0,0,0,10"
                    Text="Revoke Demo >>"
                    Command="{Binding GoToRevokePageCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White" 
            />
            <BoxView HeightRequest="1" Color="#000000" />
        </StackLayout>
    </ScrollView>
</ContentPage>